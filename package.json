{
  "type": "commonjs",
  "name": "dom-serializer",
  "version": "2.0.0",
  "description": "render domhandler DOM nodes to a string",
  "author": "Felix Boehm <me@feedic.com>",
  "sideEffects": false,
  "keywords": [
    "html",
    "xml",
    "render"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/cheeriojs/dom-serializer.git"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "module": "lib/esm/index.js",
  "exports": {
    "import": "./lib/esm/index.js",
    "require": "./lib/index.js"
  },
  "files": [
    "lib/**/*"
  ],
  "dependencies": {
    "domelementtype": "^2.3.0",
    "domhandler": "^5.0.3",
    "entities": "^7.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@eslint/compat": "^2.0.2",
    "@feedic/eslint-config": "^0.2.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.3.0",
    "cheerio": "^1.2.0",
    "eslint": "^10.0.2",
    "eslint-config-biome": "^2.1.3",
    "htmlparser2": "^10.1.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1"
  },
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc",
    "build:esm": "tsc --module esnext --target es2019 --outDir lib/esm && echo '{\"type\":\"module\"}' > lib/esm/package.json",
    "format": "npm run format:es && npm run format:biome",
    "format:biome": "biome check --write .",
    "format:es": "npm run lint:es -- --fix",
    "lint": "npm run lint:es && npm run lint:biome",
    "lint:biome": "biome check .",
    "lint:es": "eslint .",
    "prepare": "npm run build",
    "test": "npm run test:jest && npm run lint",
    "test:jest": "jest"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^(.*)\\.js$": [
        "$1",
        "$1.js"
      ]
    }
  },
  "funding": "https://github.com/cheeriojs/dom-serializer?sponsor=1",
  "license": "MIT"
}
